{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/.prisma/client"
    ],
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": [
      "node"
    ],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
