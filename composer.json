{
    "name": "lifespikes/unnamed-restaurant",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.8",
        "lifespikes/monorepo-cli": "^0.8",
        "spatie/laravel-ray": "^1.33"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "apps/api/app/",
            "Database\\Factories\\": "apps/api/database/factories/",
            "Database\\Seeders\\": "apps/api/database/seeders/",
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "apps/api/tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "lifespikes/monorepo-cli": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
            ]
        },
        "monorepo-cli": {
            "ignorePackages": [
                "monorepo-cli"
            ],
            "packageDir": [
                "apps/api",
                "packages"
            ]
        }
    },
    "replace": {
        "lifespikes/api": "self.version",
        "lifespikes/menu": "self.version"
    },
    "version": "v0.0.1",
    "minimum-stability": "dev",
    "prefer-stable": true
}
